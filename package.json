{
  "name": "readingtown",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:ui": "playwright test --ui",
    "test:mcp": "claude mcp add playwright -- npx -y @playwright/mcp@latest",
    "test:browser": "echo 'MCP Playwright를 사용하려면 Claude Code에서 다음 명령어를 실행하세요:' && echo 'claude mcp add playwright -- npx -y @playwright/mcp@latest'",
    "quality:check": "npm run lint && npm run format:check && npm run build && npm test",
    "quality:fix": "npm run format && npm run lint --fix",
    "prepare": "husky"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.85.3",
    "next": "15.4.5",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jest-fixed-jsdom": "^0.0.9",
    "lint-staged": "^16.1.5",
    "msw": "^2.10.5",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "typescript": "^5",
    "undici": "^7.13.0",
    "whatwg-fetch": "^3.6.20"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
